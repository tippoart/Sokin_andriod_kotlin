<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageView
        android:layout_width="62dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="87dp"
        android:src="@drawable/logo"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Account"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"></TextView>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/garistepihitam"
        android:hint="Email"
        android:textSize="13dp"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="15dp"></EditText>
    <EditText
        android:textSize="13dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:background="@drawable/garistepihitam"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/edt_pass"></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="50dp"
        android:weightSum="10">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Simpan Indormasi"
            android:textSize="12dp"
            android:layout_weight="8"
            android:id="@+id/btn_simpan"></RadioButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Lupa Password?"
            android:textSize="12dp"
            android:layout_weight="2"
            android:id="@+id/txt_lupa"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginHorizontal="50dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Sign In"
        android:textSize="15dp"
        android:backgroundTint="#0C3B2E"></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Belum punya akun? "></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Register"
            android:textStyle="bold"
            android:id="@+id/txt_register"></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_slide3"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"></ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_kembali"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_kembali"></ImageView>
    </LinearLayout>
</LinearLayout>